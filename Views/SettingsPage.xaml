<UserControl x:Class="SolusManifestApp.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <TextBlock Text="Settings"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text=" *"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource AccentBrush}"
                       Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Tabbed Settings -->
        <TabControl Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0,0,0,20">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource SecondaryDarkBrush}"
                                        BorderThickness="0"
                                        CornerRadius="8,8,0,0"
                                        Padding="20,10"
                                        Margin="0,0,5,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </TabControl.Resources>

            <!-- Main Settings Tab -->
            <TabItem Header="Main Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- API Key Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="API Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="API Key (must start with 'smm')"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Validate"
                                            Command="{Binding ValidateApiKeyCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <TextBlock Text="{Binding StatusMessage}"
                                           Foreground="{DynamicResource AccentBrush}"
                                           FontSize="12"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Steam Path Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Steam Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Steam Installation Path"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding SteamPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseSteamPathCommand}"
                                            Padding="20,8"
                                            Margin="0,0,10,0"/>
                                    <Button Grid.Column="2"
                                            Content="Auto-Detect"
                                            Command="{Binding DetectSteamCommand}"
                                            Padding="20,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Tool Mode Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Tool Mode"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Select the mode for game downloads and depot management"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <RadioButton Content="SteamTools"
                                                IsChecked="{Binding IsSteamToolsMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                Margin="0,0,30,0"
                                                ToolTip="Standard mode for downloading and installing games"/>
                                    <RadioButton Content="GreenLuma"
                                                IsChecked="{Binding IsGreenLumaMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                ToolTip="Advanced mode with depot control and language selection for GreenLuma"/>
                                </StackPanel>

                                <TextBlock Text="â€¢ SteamTools: Standard download mode"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ GreenLuma: Advanced depot control with language selection"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Downloads Path Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Downloads"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Downloads Folder"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding DownloadsPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseDownloadsPathCommand}"
                                            Padding="20,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Application Settings Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Application Settings"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Auto-Update"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding SelectedAutoUpdateMode}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,10"
                                          ToolTip="Control how the app handles updates">
                                    <ComboBoxItem Content="Disabled - Never check for updates" Tag="Disabled"/>
                                    <ComboBoxItem Content="Check Only - Notify me about updates" Tag="CheckOnly"/>
                                    <ComboBoxItem Content="Auto Download &amp; Install - Update automatically" Tag="AutoDownloadAndInstall"/>
                                </ComboBox>

                                <CheckBox Content="Minimize to system tray"
                                          IsChecked="{Binding MinimizeToTray}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="When clicking the X button, hide to system tray instead of closing the app"/>

                                <CheckBox Content="Auto-install after download completes"
                                          IsChecked="{Binding AutoInstallAfterDownload}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Automatically install games after they finish downloading"/>

                                <CheckBox Content="Show notifications"
                                          IsChecked="{Binding ShowNotifications}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          ToolTip="Show Windows toast notifications (when OFF, uses traditional message boxes)"/>
                            </StackPanel>
                        </Border>

                        <!-- Theme Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Theme"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Choose your preferred color theme"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>

                                <ComboBox SelectedValue="{Binding SelectedThemeName}"
                                          SelectedValuePath="Tag"
                                          FontSize="14"
                                          Padding="10,8"
                                          Margin="0,0,0,10">
                                    <ComboBoxItem Content="Default (Steam)" Tag="Default"/>
                                    <ComboBoxItem Content="True Dark Mode" Tag="Dark"/>
                                    <ComboBoxItem Content="Light Mode" Tag="Light"/>
                                    <ComboBoxItem Content="Cherry" Tag="Cherry"/>
                                    <ComboBoxItem Content="Sunset" Tag="Sunset"/>
                                    <ComboBoxItem Content="Forest" Tag="Forest"/>
                                    <ComboBoxItem Content="Grape" Tag="Grape"/>
                                    <ComboBoxItem Content="Cyberpunk" Tag="Cyberpunk"/>
                                </ComboBox>

                                <TextBlock Text="Theme will be applied when you save settings"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>


                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- GreenLuma Settings Tab -->
            <TabItem Header="GreenLuma Settings" Visibility="{Binding IsGreenLumaMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- GreenLuma Mode Selection -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="GreenLuma Mode"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Select GreenLuma sub-mode"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <RadioButton Content="Normal"
                                                IsChecked="{Binding IsGreenLumaNormalMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                Margin="0,0,20,0"
                                                ToolTip="Standard GreenLuma mode with DLLInjector at Steam path"/>
                                    <RadioButton Content="Stealth (Any Folder)"
                                                IsChecked="{Binding IsGreenLumaStealthAnyFolderMode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                Margin="0,0,20,0"
                                                ToolTip="Advanced stealth mode - DLLInjector in custom location for better security"/>
                                    <RadioButton Content="Stealth (User32)"
                                                IsChecked="{Binding IsGreenLumaStealthUser32Mode}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14"
                                                ToolTip="Launches Steam normally without DLLInjector"/>
                                </StackPanel>

                                <!-- Advanced Mode Checkbox (Normal Mode Only) -->
                                <CheckBox Content="Advanced: Allow custom DLLInjector path"
                                          IsChecked="{Binding IsAdvancedNormalMode}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          FontSize="12"
                                          Margin="0,0,0,15"
                                          Visibility="{Binding IsGreenLumaNormalMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          ToolTip="Enable custom DLLInjector location while keeping AppList at Steam path"/>

                                <TextBlock Text="â€¢ Normal: DLLInjector at {SteamPath}/DLLInjector.exe, AppList at {SteamPath}/AppList"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ Stealth (Any Folder): For best security - DLLInjector in custom location, AppList in same folder"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ Stealth (User32): Launches Steam normally"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- DLLInjector Path (Normal Mode Advanced) -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20"
                                Visibility="{Binding ShowAdvancedNormalModeSettings, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="DLLInjector Configuration (Advanced)"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="DLLInjector.exe Location"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding DllInjectorPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseDLLInjectorPathCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <TextBlock Text="AppList will still be generated at {SteamPath}/AppList"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <!-- DLLInjector Path (Stealth Any Folder Mode Only) -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20"
                                Visibility="{Binding IsGreenLumaStealthAnyFolderMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="DLLInjector Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="DLLInjector.exe Location"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding DllInjectorPath, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1"
                                            Content="Browse"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding BrowseDLLInjectorPathCommand}"
                                            Padding="20,8"/>
                                </Grid>

                                <TextBlock Text="AppList will be generated in the same folder as DLLInjector.exe"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <!-- Library Folder Selection -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Installation Location"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <CheckBox Content="Use default Steam library location"
                                          IsChecked="{Binding UseDefaultInstallLocation}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"
                                          ToolTip="Install .acf files to the default Steam library folder"/>

                                <TextBlock Text="Select Library Folder"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"
                                           Visibility="{Binding UseDefaultInstallLocation, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                <ComboBox ItemsSource="{Binding LibraryFolders}"
                                          SelectedItem="{Binding SelectedLibraryFolder}"
                                          Visibility="{Binding UseDefaultInstallLocation, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                          Margin="0,0,0,10"/>

                                <TextBlock Text="Select where to install .acf files"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Maintenance Tab -->
            <TabItem Header="Maintenance">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- Cache Management -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Cache Management"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="{Binding GetCacheSizeFormatted(), StringFormat='Current cache size: {0}'}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>

                                <Button Content="Clear Cache"
                                        Command="{Binding ClearCacheCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,10"
                                        HorizontalAlignment="Left"/>

                                <TextBlock Text="Clears all cached game icons and API data"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Logs Management -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Logs Management"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <Button Content="Clear Old Logs"
                                        Command="{Binding ClearLogsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="20,10"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,10"/>

                                <TextBlock Text="Deletes all old log files (except current session)"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- SteamAuth Pro Tab -->
            <TabItem Header="SteamAuth Pro">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- Accounts Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Steam Accounts"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Manage Steam accounts for authentication"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>

                                <ListBox ItemsSource="{Binding SteamAuthProAccounts}"
                                         SelectedIndex="{Binding SteamAuthProActiveAccountIndex}"
                                         MaxHeight="150"
                                         Margin="0,0,0,10"
                                         Background="{DynamicResource SteamMediumBrush}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Auto-Detect Accounts"
                                            Command="{Binding SteamAuthProAutoDetectCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="15,8"
                                            Margin="0,0,10,0"/>
                                    <Button Content="Add Account"
                                            Command="{Binding SteamAuthProAddAccountCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="15,8"
                                            Margin="0,0,10,0"/>
                                    <Button Content="Remove Selected"
                                            Command="{Binding SteamAuthProRemoveAccountCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="15,8"
                                            Margin="0,0,10,0"/>
                                    <Button Content="Set as Active"
                                            Command="{Binding SteamAuthProSetActiveCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="15,8"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- API Configuration Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="API Configuration"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="API URL"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SteamAuthProApiUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,15"/>

                                <TextBlock Text="PHPSESSID"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SteamAuthProPhpSessionId, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,10"/>

                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic">
                                    To get PHPSESSID:<LineBreak/>
                                    1. Open browser DevTools (F12)<LineBreak/>
                                    2. Go to https://drm.steam.run<LineBreak/>
                                    3. Check Application â†’ Cookies â†’ PHPSESSID
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Config VDF Extractor Tab -->
            <TabItem Header="Config VDF Extractor">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- File Paths Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="File Paths"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Config.vdf File Path"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ConfigVdfPath, UpdateSourceTrigger=PropertyChanged}"
                                             Grid.Column="0"
                                             Margin="0,0,10,0"/>
                                    <Button Content="Browse..."
                                            Grid.Column="1"
                                            Command="{Binding BrowseConfigVdfCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="15,8"/>
                                </Grid>

                                <TextBlock Text="Combinedkeys.key File Path"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding CombinedKeysPath, UpdateSourceTrigger=PropertyChanged}"
                                             Grid.Column="0"
                                             Margin="0,0,10,0"/>
                                    <Button Content="Browse..."
                                            Grid.Column="1"
                                            Command="{Binding BrowseCombinedKeysCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="15,8"/>
                                </Grid>

                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontStyle="Italic"
                                           Margin="0,10,0,0">
                                    These paths are used for extracting depot keys from your Steam config.vdf file.<LineBreak/>
                                    The combinedkeys.key file is optional and used to filter out already-known keys.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Fixed Save Button at Bottom -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Padding="40,12"
                        Command="{Binding SaveSettingsCommand}"
                        FontSize="16"
                        FontWeight="SemiBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾ Save Settings"/>
                        <TextBlock Text=" *"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="5,0,0,0"
                                   Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Button>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
